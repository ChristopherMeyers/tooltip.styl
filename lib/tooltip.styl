tooltip($selector) {
  error('bad type for $selector') unless $selector is a 'string'

  position: relative;
  display: inline-block;
  & {$selector} {
    position: absolute;
    bottom: 100%;
    visibility: hidden;
  }
  &:hover, &:focus {
    {$selector} {
      visibility: visible;
    }
  }
}
