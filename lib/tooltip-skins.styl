tooltip-skin-basic_floating_box(
                                $selector,
                                $padding = 0.3em .75em,
                                $border = 1px solid #ccc,
                                $background = white,
                                $box-shadow = 0 3px 10px 0 rgba(0,0,0,.4),
                                $yOffset = 0.5em) {
  {$selector} {
    padding: $padding;
    border: $border;
    background: $background;
    box-shadow: $box-shadow;
    margin-bottom: $yOffset;
  }
}

tooltip-skin-arrow(
                                $selector,
                                $size = 7px,
                                $border-color = #ccc,
                                $border-width = 2px,
                                $background = white) {
  {$selector} {
    &:before, &:after {
      position: absolute;
      top: 100%;
      left: 50%;
      content: "";
      transform: translateX(-50%);
    }
    &:after {
      z-index: 2;
      border: $size solid transparent;
      border-top-color: white;
      border-bottom: none;
    }
    &:before {
      z-index: 1;
      border: ($size + $border-width) solid transparent;
      border-top-color: $border-color;
      border-bottom: none;
    }
  }
}
